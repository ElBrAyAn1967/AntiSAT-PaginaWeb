---
import "@fontsource-variable/onest";
import "@fontsource-variable/open-sans";
const images = [
  "/Slider/LOGOS/PNG/Ethereum Mexico.png",
  "/Slider/LOGOS/PNG/Lock-up_Colour.png",  
  "/Slider/LOGOS/PNG/Logo-Merch30.png",
  "/Slider/LOGOS/SVG/CripTEC-logo-HOR-WHITE.svg",
  "/Slider/LOGOS/PNG/Lock-up_White.png",
  "/Slider/LOGOS/SVG/nouns.svg",
  "/Slider/LOGOS/SVG/vara-logo-white.svg",



  "/Slider/LOGOS/PNG/Ethereum Mexico.png",
  "/Slider/LOGOS/PNG/Lock-up_Colour.png",
  "/Slider/LOGOS/PNG/Logo-Merch30.png",
  "/Slider/LOGOS/SVG/CripTEC-logo-HOR-WHITE.svg",
  "/Slider/LOGOS/SVG/nouns.svg",
  "/Slider/LOGOS/PNG/Lock-up_White.png",
  "/Slider/LOGOS/SVG/vara-logo-white.svg",
];
---

<div class="w-[99vw] mx-auto overflow-hidden relative">
  <!--LATERALES TRASNPARENTES , PANTALLA DE HUMO -->
  <div class="absolute top-0 bottom-0 left-0 w-[50px] bg-gradient-to-r from-gray-900 to-transparent z-10"></div>
  <div class="absolute top-0 bottom-0 right-0 w-[50px] bg-gradient-to-l from-gray-900 to-transparent z-10"></div>
  <!--CIERRE DE PANTALLA DE HUMO -->
 
  <!--ANIMACION DE MOVIMIENTO INFINITO -->
  <div class="flex animate-scroll w-[calc(200px*14)] gap-4 sm:gap-16 items-center justify-center">
    {images.map((src, index) => (
      <div class="w-[120px] sm:w-[200px] transition-opacity duration-500 ease-in-out opacity-100 hover:opacity-50">
        <img src={src} alt={`Slide ${index + 1}`} class="w-full" />
      </div>
    ))}
  </div>
</div>

<!--ESTILOS DE MI  SLITE DE MOVIMIENTO  -->
<style is:global>
  @keyframes scroll {
    0% {
      -webkit-transform: translateX(0);
      transform: translateX(0);
    }
    100% {
      -webkit-transform: translateX(calc(-200px * 7));
      transform: translateX(calc(-200px * 7));
    }
  }
  .animate-scroll {
    animation: scroll 40s linear infinite;
    -webkit-animation: scroll 40s linear infinite;
  }
</style>
<!--CIERRE DE ANIMACION DE MOVIMIENTO -->