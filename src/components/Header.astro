<header id="header-nav" class="fixed w-[99vw] h-auto py-3 z-10 px-8 lg:px-0">
  <div class="flex items-center justify-between max-w-7xl mx-auto">
    <!-- Logotipo (siempre visible) -->
    <div class="flex-shrink-0">
      <img src="/CripTEC-logo-HOR-WHITE.svg" class="w-36">
    </div>

    <!-- Navegación (oculta en móviles, visible en pantallas grandes) -->
    <div class="hidden lg:flex">
      <nav>
        <ul class="flex gap-4 justify-center">
          <li><a class="hover:underline" href="#">CripTec</a></li>
          <li><a class="hover:underline" href="#">Cursos</a></li>
          <li><a class="hover:underline" href="#">Eventos</a></li>
          <li><a class="hover:underline" href="#">Vara</a></li>
        </ul>
      </nav>
    </div>

    <!-- Botón Connect Wallet (visible solo en pantallas grandes) -->
    <div class="hidden lg:flex justify-end">
      <a href="#" class="border rounded-lg inline-block border-white px-4 py-1 hover:bg-white hover:text-black duration-300">
        Connect Wallet
      </a>
    </div>

    <!-- Botón del menú móvil (visible en pantallas pequeñas, al lado derecho) -->
    <div class="lg:hidden flex-shrink-0">
      <a id="menu-toggle" class="flex items-center justify-center text-white">
        <span class="material-icons">menu</span>
      </a>
    </div>
  </div>

  <!-- Menú móvil (inicialmente oculto) -->
  <div id="mobile-menu" class="hidden lg:hidden flex-col items-center bg-black text-white absolute w-full top-full mt-2">
    <ul class="flex flex-col items-center gap-4 py-4">
      <li><a href="#" class="hover:text-gray-300">CripTec</a></li>
      <li><a href="#" class="hover:text-gray-300">Cursos</a></li>
      <li><a href="#" class="hover:text-gray-300">Futuros</a></li>
      <li><a href="#" class="hover:text-gray-300">Vara</a></li>
      <li><a href="#" class="border border-white px-4 py-2 rounded-full hover:bg-white hover:text-black duration-300">Login</a></li>
    </ul>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuToggle = document.getElementById('menu-toggle'); // Botón para abrir el menú
    const mobileMenu = document.getElementById('mobile-menu'); // Menú móvil
    // Verificar que ambos elementos existen
    if (menuToggle && mobileMenu) {
      // Alternar visibilidad del menú móvil
      menuToggle.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
        mobileMenu.classList.toggle('flex');
      });
    }
  });
</script>


