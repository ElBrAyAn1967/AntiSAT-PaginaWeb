---
import BentoItem from './BentoItem.astro';
---

<section class="w-full max-w-[1400px] grid grid-cols-10 gap-4 mx-auto p-20">

  <!-- Área para información -->
  <div class="col-span-10 md:col-span-4">
    <div class=" p-6 rounded-lg shadow-lg">
      <h2 class="text-2xl font-bold mb-4">Información</h2>
      <p class="text-lg mb-4">Aquí puedes poner la información que desees mostrar.</p>
      <!-- Puedes añadir más contenido aquí -->
    </div>
  </div>

  <!-- Elemento de imagen -->
  <BentoItem class="col-span-10 md:col-span-6" title="IMAGEN" subtitle="Descripción de la imagen">
    <div slot="image" class="absolute left-0 top-0 bottom-0 h-full w-full group-hover:scale-110 transition-transform duration-1000 ease-in-out opacity-90 bg-center bg-cover bg-no-repeat bg-blue-950 -z-10" 
         style="background-image: url('/Img-Bento/3.svg')">
    </div>
  </BentoItem>

</section>
